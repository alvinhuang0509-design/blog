[Unit]
Description=Lewin's Insight (Astro preview on 8080)
After=network.target

[Service]
Type=simple
WorkingDirectory=%h/astroplate
Environment=NODE_ENV=production
ExecStart=/usr/bin/env bash -lc 'export NVM_DIR="$HOME/.nvm"; [ -s "$NVM_DIR/nvm.sh" ] && . "$NVM_DIR/nvm.sh"; nvm use --silent >/dev/null; cd "$HOME/astroplate"; yarn preview -- --host 0.0.0.0 --port 8080'
Restart=on-failure
RestartSec=2

[Install]
WantedBy=default.target
