---
export interface Props {
  label?: string;
  className?: string;
}

const { label = "加载中...", className } = Astro.props as Props;
---

<div class={`flex items-center justify-center py-20 ${className ?? ""}`}>
  <div class="relative">
    <div class="h-16 w-16 animate-spin rounded-full border-4 border-transparent border-t-primary"></div>
    <div
      class="absolute left-0 top-0 h-16 w-16 animate-spin rounded-full border-4 border-transparent border-t-primary"
      style="animation-delay: 0.15s"
    ></div>
    <div
      class="absolute left-0 top-0 h-16 w-16 animate-spin rounded-full border-4 border-transparent border-t-primary"
      style="animation-delay: 0.3s"
    ></div>
  </div>
  <p class="mt-4 text-text-light dark:text-darkmode-text-light">{label}</p>
</div>

