---
import BlogCard from "@/components/BlogCard.astro";
import Share from "@/components/Share.astro";
import Disqus from "./helpers/Disqus";
import { getSinglePage } from "@/lib/contentParser.astro";
import dateFormat from "@/lib/utils/dateFormat";
import similarItems from "@/lib/utils/similarItems";
import { humanize, markdownify, slugify } from "@/lib/utils/textConverter";
import { render } from "astro:content";
import { FaRegClock, FaRegFolder, FaRegUserCircle, FaEye } from "react-icons/fa";
import ImageMod from "./components/ImageMod.astro";
import config from "@/config/config.json";
import { readingTimeMinutes } from "@/lib/utils/readingTime";

const { post } = Astro.props;
const currentCollection = post.collection;
const routeBase = currentCollection === "dailyLife" ? "daily-life" : currentCollection;
const taxonomyBase =
  currentCollection === "ai" || currentCollection === "security"
    ? currentCollection
    : undefined;
const categoryBase = taxonomyBase ? `/${taxonomyBase}/categories` : "/categories";
const tagBase = taxonomyBase ? `/${taxonomyBase}/tags` : "/tags";
const posts = await getSinglePage(currentCollection);
const similarPosts = similarItems(post, posts);
const { Content } = await render(post);
const { title, description, author, categories, image, date, updated, tags, severity, cve_id, related_papers } = post.data;
const views = post.data.views || 0;
const minutesToRead = readingTimeMinutes(post.body || "");
const postUrl = Astro.site
  ? new URL(Astro.url.pathname, Astro.site).toString()
  : `${config.site.base_url}${Astro.url.pathname}`;
---

<section class="section pt-7">
  <div class="container">
    <div class="row justify-center">
      <article class="lg:col-10">
        {
          image && (
            <div class="mb-10">
              <ImageMod
                src={image}
                height={500}
                width={1200}
                alt={title}
                class="w-full rounded"
                format="webp"
              />
            </div>
          )
        }
        <h1 set:html={markdownify(title)} class="h2 mb-4" />
        <ul class="mb-4">
          <li class="mr-4 inline-block">
            <a href={`/authors/${slugify(author)}`}>
              <FaRegUserCircle className={"mr-2 -mt-1 inline-block"} />
              {humanize(author)}
            </a>
          </li>
          <li class="mr-4 inline-block">
            <FaRegFolder className={"mr-2 -mt-1 inline-block"} />
            {
              categories.map((category: string, index: number) => (
                <a href={`${categoryBase}/${slugify(category)}`}>
                  {humanize(category)}
                  {index !== categories.length - 1 && ","}
                </a>
              ))
            }
          </li>
          <li class="mr-4 inline-block">
            <FaRegClock className={"mr-2 -mt-1 inline-block"} />
            {dateFormat(date)}
          </li>
          <li class="mr-4 inline-block">
            <FaRegClock className={"mr-2 -mt-1 inline-block"} />
            {minutesToRead} 分钟阅读
          </li>
          {
            updated && (
              <li class="mr-4 inline-block">
                <FaRegClock className={"mr-2 -mt-1 inline-block"} />
                更新于 {dateFormat(updated)}
              </li>
            )
          }
          <li class="mr-4 inline-block">
            <FaEye className={"mr-2 -mt-1 inline-block"} />
            {views} 次阅读
          </li>
        </ul>

        {/* Security Alert Banner */}
        {
          severity && (
            <div class={`mb-8 rounded-lg border-l-4 p-4 ${
              severity === 'critical' ? 'border-red-500 bg-red-50 dark:bg-red-900/20 text-red-700 dark:text-red-200' :
              severity === 'high' ? 'border-orange-500 bg-orange-50 dark:bg-orange-900/20 text-orange-700 dark:text-orange-200' :
              'border-blue-500 bg-blue-50 dark:bg-blue-900/20 text-blue-700 dark:text-blue-200'
            }`}>
              <div class="flex items-center gap-2">
                <span class="font-bold uppercase tracking-wider">{severity} SEVERITY</span>
                {cve_id && <span class="opacity-75">| {cve_id}</span>}
              </div>
            </div>
          )
        }

        <div class="content mb-10">
          <Content />
        </div>

        {/* AI Related Papers Section */}
        {
          related_papers && related_papers.length > 0 && (
            <div class="mb-10 rounded-xl border border-border bg-theme-light p-6 dark:border-darkmode-border dark:bg-darkmode-theme-light">
              <h4 class="h5 mb-4 flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-book-open"><path d="M2 3h6a4 4 0 0 1 4 4v14a3 3 0 0 0-3-3H2z"/><path d="M22 3h-6a4 4 0 0 0-4 4v14a3 3 0 0 1 3-3h7z"/></svg>
                Related Papers & References
              </h4>
              <ul class="space-y-3">
                {related_papers.map((paper: { title: string; url: string }) => (
                  <li>
                    <a href={paper.url} target="_blank" rel="noopener noreferrer" class="group flex items-start gap-2 text-text transition-colors hover:text-primary dark:text-darkmode-text dark:hover:text-darkmode-primary">
                      <span class="mt-1.5 h-1.5 w-1.5 shrink-0 rounded-full bg-primary/50 group-hover:bg-primary"></span>
                      <span>{paper.title}</span>
                      <span class="opacity-50 text-xs ml-1">↗</span>
                    </a>
                  </li>
                ))}
              </ul>
            </div>
          )
        }

        <div class="row items-start justify-between">
          <div class="mb-10 flex items-center lg:col-5 lg:mb-0">
            <h5 class="mr-3">Tags :</h5>
            <ul>
              {
                tags.map((tag: string) => (
                  <li class="inline-block">
                    <a
                      class="m-1 block rounded bg-light px-3 py-1 hover:bg-primary hover:text-white dark:bg-darkmode-light dark:hover:bg-darkmode-primary dark:hover:text-text-dark"
                      href={`${tagBase}/${slugify(tag)}`}
                    >
                      {humanize(tag)}
                    </a>
                  </li>
                ))
              }
            </ul>
          </div>
          <div class="flex items-center lg:col-4">
            <h5 class="mr-3">Share :</h5>
            <Share
              className="social-icons"
              title={title}
              description={description}
              slug={`${routeBase}/${post.id}`}
            />
          </div>
        </div>
        <Disqus
          className="mt-20"
          identifier={`${post.collection}/${post.id}`}
          title={title}
          url={postUrl}
          client:visible
        />
      </article>
    </div>

    <!-- Related posts -->
    <div class="section pb-0">
      <h2 class="h3 mb-12 text-center">Related Posts</h2>
      <div class="row justify-center">
        {
          similarPosts.map((post) => (
            <div class="lg:col-4 md:col-6 mb-14">
              <BlogCard data={post} section={routeBase} />
            </div>
          ))
        }
      </div>
    </div>
  </div>
</section>
