---
import BlogCard from "@/components/BlogCard.astro";
import Base from "@/layouts/Base.astro";
import { getSinglePage } from "@/lib/contentParser.astro";
import { getTaxonomy } from "@/lib/taxonomyParser.astro";
import { sortByDate } from "@/lib/utils/sortFunctions";
import taxonomyFilter from "@/lib/utils/taxonomyFilter";
import { humanize } from "@/lib/utils/textConverter";
import PageHeader from "@/partials/PageHeader.astro";

// get static paths for all categories across all collections
export async function getStaticPaths() {
  const collections = ["blog", "ai", "security", "dailyLife"] as const;
  let allCategories: string[] = [];

  for (const collection of collections) {
    const categories = await getTaxonomy(collection, "categories");
    allCategories = [...allCategories, ...categories];
  }

  // Deduplicate categories
  const uniqueCategories = [...new Set(allCategories)];

  return uniqueCategories.map((category) => {
    return {
      params: { category },
    };
  });
}

const category = Astro.params.category;
if (!category) {
  throw new Error("Missing category param");
}

// get posts by category from all collections
let allPosts: any[] = [];
const collections = [
  { key: "blog", route: "blog" },
  { key: "ai", route: "ai" },
  { key: "security", route: "security" },
  { key: "dailyLife", route: "daily-life" },
] as const;

for (const { key, route } of collections) {
  const posts = await getSinglePage(key);
  // Inject 'section' property for BlogCard URL generation
  const postsWithSection = posts.map((post) => ({ ...post, section: route }));
  allPosts = [...allPosts, ...postsWithSection];
}

const filterByCategories = taxonomyFilter(allPosts, "categories", category);
const sortedPosts = sortByDate(filterByCategories);
---

<Base title={humanize(category)}>
  <PageHeader title={humanize(category)} />
  <div class="section-sm pb-0">
    <div class="container">
      <div class="row">
        {
          sortedPosts.length > 0 ? (
            sortedPosts.map((post) => (
              <div class="mb-14 md:col-6 lg:col-4">
                <BlogCard data={post} section={post.section} />
              </div>
            ))
          ) : (
            <div class="col-12 text-center">
              <p>No posts found in this category.</p>
            </div>
          )
        }
      </div>
    </div>
  </div>
</Base>
