---
import BlogCard from "@/components/BlogCard.astro";
import Breadcrumbs from "@/components/Breadcrumbs.astro";
import Base from "@/layouts/Base.astro";
import { getSinglePage } from "@/lib/contentParser.astro";
import { sortByDate } from "@/lib/utils/sortFunctions";
import { humanize } from "@/lib/utils/textConverter";
import taxonomyFilter from "@/lib/utils/taxonomyFilter";
import PageHeader from "@/partials/PageHeader.astro";
import PostSidebar from "@/partials/PostSidebar.astro";
import { getAllTaxonomy, getTaxonomy } from "@/lib/taxonomyParser.astro";

export async function getStaticPaths() {
  const categories = [
    ...(await getTaxonomy("ai", "categories")),
    ...(await getTaxonomy("security", "categories")),
  ];
  const uniqueCategories = [...new Set(categories)];

  return uniqueCategories.map((category) => ({
    params: { category },
  }));
}

const category = Astro.params.category;
if (!category) {
  throw new Error("Missing category param");
}

const aiPosts = await getSinglePage("ai");
const securityPosts = await getSinglePage("security");
const allPosts = [
  ...aiPosts.map((post) => ({ ...post, section: "ai" })),
  ...securityPosts.map((post) => ({ ...post, section: "security" })),
];

const allCategories = [
  ...(await getAllTaxonomy("ai", "categories")),
  ...(await getAllTaxonomy("security", "categories")),
];
const categories = [
  ...new Set([
    ...(await getTaxonomy("ai", "categories")),
    ...(await getTaxonomy("security", "categories")),
  ]),
];
const tags = [
  ...new Set([
    ...(await getTaxonomy("ai", "tags")),
    ...(await getTaxonomy("security", "tags")),
  ]),
];
const allTags = [
  ...(await getAllTaxonomy("ai", "tags")),
  ...(await getAllTaxonomy("security", "tags")),
];

const categoryPosts = sortByDate(taxonomyFilter(allPosts, "categories", category));

const breadcrumbItems = [
  { name: "资讯汇总", url: "/ai-security" },
  { name: humanize(category), url: `/ai-security/categories/${category}` },
];
---

<Base
  title={`${humanize(category)} - 资讯汇总`}
  description={`浏览${humanize(category)}分类下的全部文章（AI资讯与信息安全资讯）`}
>
  <PageHeader title={humanize(category)} />
  <Breadcrumbs items={breadcrumbItems} />
  <section class="section">
    <div class="container">
      <div class="row gx-5">
        <!-- category posts -->
        <div class="lg:col-8">
          {
            categoryPosts.length > 0 ? (
              <div class="row">
                {
                  categoryPosts.map((post) => (
                    <div class="mb-14 md:col-6">
                      <BlogCard data={post} section={post.section} />
                    </div>
                  ))
                }
              </div>
            ) : (
              <div class="text-center py-20">
                <p>暂无该分类下的文章</p>
              </div>
            )
          }
        </div>

        <!-- sidebar -->
        <PostSidebar
          categories={categories}
          tags={tags}
          allCategories={allCategories}
          allTags={allTags}
          taxonomyBase="ai-security"
        />
      </div>
    </div>
  </section>
</Base>
