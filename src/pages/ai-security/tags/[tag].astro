---
import BlogCard from "@/components/BlogCard.astro";
import Breadcrumbs from "@/components/Breadcrumbs.astro";
import Base from "@/layouts/Base.astro";
import { getSinglePage } from "@/lib/contentParser.astro";
import { getAllTaxonomy, getTaxonomy } from "@/lib/taxonomyParser.astro";
import { sortByDate } from "@/lib/utils/sortFunctions";
import taxonomyFilter from "@/lib/utils/taxonomyFilter";
import { humanize } from "@/lib/utils/textConverter";
import PageHeader from "@/partials/PageHeader.astro";
import PostSidebar from "@/partials/PostSidebar.astro";

export async function getStaticPaths() {
  const tags = [
    ...(await getTaxonomy("ai", "tags")),
    ...(await getTaxonomy("security", "tags")),
  ];
  const uniqueTags = [...new Set(tags)];
  return uniqueTags.map((tag) => ({ params: { tag } }));
}

const tag = Astro.params.tag;
if (!tag) {
  throw new Error("Missing tag param");
}

const aiPosts = await getSinglePage("ai");
const securityPosts = await getSinglePage("security");
const allPosts = [
  ...aiPosts.map((post) => ({ ...post, section: "ai" })),
  ...securityPosts.map((post) => ({ ...post, section: "security" })),
];

const allCategories = [
  ...(await getAllTaxonomy("ai", "categories")),
  ...(await getAllTaxonomy("security", "categories")),
];
const categories = [
  ...new Set([
    ...(await getTaxonomy("ai", "categories")),
    ...(await getTaxonomy("security", "categories")),
  ]),
];
const tags = [
  ...new Set([
    ...(await getTaxonomy("ai", "tags")),
    ...(await getTaxonomy("security", "tags")),
  ]),
];
const allTags = [
  ...(await getAllTaxonomy("ai", "tags")),
  ...(await getAllTaxonomy("security", "tags")),
];

const tagPosts = sortByDate(taxonomyFilter(allPosts, "tags", tag));

const breadcrumbItems = [
  { name: "资讯汇总", url: "/ai-security" },
  { name: "标签", url: "/ai-security/tags" },
  { name: humanize(tag), url: `/ai-security/tags/${tag}` },
];
---

<Base title={`${humanize(tag)} - 资讯汇总`} description={`浏览标签 ${humanize(tag)} 下的全部文章（AI资讯与信息安全资讯）`}>
  <PageHeader title={humanize(tag)} />
  <Breadcrumbs items={breadcrumbItems} />
  <section class="section">
    <div class="container">
      <div class="row gx-5">
        <div class="lg:col-8">
          {
            tagPosts.length > 0 ? (
              <div class="row">
                {
                  tagPosts.map((post) => (
                    <div class="mb-14 md:col-6">
                      <BlogCard data={post} section={post.section} />
                    </div>
                  ))
                }
              </div>
            ) : (
              <div class="text-center py-20">
                <p>暂无该标签下的文章</p>
              </div>
            )
          }
        </div>

        <PostSidebar
          categories={categories}
          tags={tags}
          allCategories={allCategories}
          allTags={allTags}
          taxonomyBase="ai-security"
        />
      </div>
    </div>
  </section>
</Base>
