---
import BlogCard from "@/components/BlogCard.astro";
import Breadcrumbs from "@/components/Breadcrumbs.astro";
import Base from "@/layouts/Base.astro";
import { getSinglePage } from "@/lib/contentParser.astro";
import PageHeader from "@/partials/PageHeader.astro";
import PostSidebar from "@/partials/PostSidebar.astro";
import { getAllTaxonomy, getTaxonomy } from "@/lib/taxonomyParser.astro";
import { sortByDate } from "@/lib/utils/sortFunctions";

export async function getStaticPaths() {
  const aiPosts = await getSinglePage("ai");
  const securityPosts = await getSinglePage("security");
  const allPosts = [...aiPosts, ...securityPosts];

  const yearMonthPairs = new Set<string>();
  for (const post of allPosts) {
    if (!post.data.date) continue;
    const date = new Date(post.data.date);
    const year = String(date.getFullYear());
    const month = String(date.getMonth() + 1).padStart(2, "0");
    yearMonthPairs.add(`${year}-${month}`);
  }

  return [...yearMonthPairs].map((pair) => {
    const [year, month] = pair.split("-");
    return { params: { year, month } };
  });
}

const year = Astro.params.year;
const month = Astro.params.month;
if (!year || !month) {
  throw new Error("Missing year/month params");
}

const aiPosts = await getSinglePage("ai");
const securityPosts = await getSinglePage("security");
const allPosts = [
  ...aiPosts.map((post) => ({ ...post, section: "ai" })),
  ...securityPosts.map((post) => ({ ...post, section: "security" })),
];

const allCategories = [
  ...(await getAllTaxonomy("ai", "categories")),
  ...(await getAllTaxonomy("security", "categories")),
];
const categories = [
  ...new Set([
    ...(await getTaxonomy("ai", "categories")),
    ...(await getTaxonomy("security", "categories")),
  ]),
];
const tags = [
  ...new Set([
    ...(await getTaxonomy("ai", "tags")),
    ...(await getTaxonomy("security", "tags")),
  ]),
];
const allTags = [
  ...(await getAllTaxonomy("ai", "tags")),
  ...(await getAllTaxonomy("security", "tags")),
];

const archivePosts = allPosts.filter((post) => {
  if (!post.data.date) return false;
  const postDate = new Date(post.data.date);
  return (
    postDate.getFullYear() === parseInt(year) &&
    postDate.getMonth() + 1 === parseInt(month)
  );
});

const sortedPosts = sortByDate(archivePosts);

const breadcrumbItems = [
  { name: "资讯汇总", url: "/ai-security" },
  { name: `${year}年${month}月`, url: `/ai-security/archives/${year}/${month}` },
];
---

<Base
  title={`${year}年${month}月 - 资讯汇总归档`}
  description={`浏览${year}年${month}月发布的全部文章（AI资讯与信息安全资讯）`}
>
  <PageHeader title={`${year}年${month}月归档`} />
  <Breadcrumbs items={breadcrumbItems} />
  <section class="section">
    <div class="container">
      <div class="row gx-5">
        <!-- archive posts -->
        <div class="lg:col-8">
          {
            sortedPosts.length > 0 ? (
              <div class="row">
                {
                  sortedPosts.map((post) => (
                    <div class="mb-14 md:col-6">
                      <BlogCard data={post} section={post.section} />
                    </div>
                  ))
                }
              </div>
            ) : (
              <div class="text-center py-20">
                <p>该月份暂无文章</p>
              </div>
            )
          }
        </div>

        <!-- sidebar -->
        <PostSidebar
          categories={categories}
          tags={tags}
          allCategories={allCategories}
          allTags={allTags}
          taxonomyBase="ai-security"
        />
      </div>
    </div>
  </section>
</Base>
