---
import Breadcrumbs from "@/components/Breadcrumbs.astro";
import Base from "@/layouts/Base.astro";
import { getAllTaxonomy } from "@/lib/taxonomyParser.astro";
import { humanize } from "@/lib/utils/textConverter";
import PageHeader from "@/partials/PageHeader.astro";

const allCategories = await getAllTaxonomy("security", "categories");
const categories = [...new Set(allCategories)];

const breadcrumbItems = [
  { name: "信息安全", url: "/security" },
  { name: "分类", url: "/security/categories" },
];
---

<Base title="分类 - 信息安全" description="浏览信息安全内容的全部分类" noindex={true}>
  <PageHeader title="分类" />
  <Breadcrumbs items={breadcrumbItems} />
  <section class="section">
    <div class="container text-center">
      <ul>
        {
          categories.map((category: string) => {
            const count = allCategories.filter((c) => c === category).length;
            return (
              <li class="m-3 inline-block">
                <a
                  href={`/security/categories/${category}`}
                  class="block rounded bg-light px-4 py-2 text-xl text-text-dark dark:bg-darkmode-light dark:text-darkmode-text-dark"
                >
                  {humanize(category)}{" "}
                  <span class="ml-2 rounded bg-body px-2 dark:bg-darkmode-body">
                    {count}
                  </span>
                </a>
              </li>
            );
          })
        }
      </ul>
    </div>
  </section>
</Base>
